<GameLayout>:
  canvas:
    Rectangle:
      source: 'monster-background.png'
      size: self.size

  StickerBookBar:
    canvas.before:
      Color:
        rgba: 0.4, 0.4, 0.4, 0.5
      Rectangle:
        pos: self.pos
        size: self.size
    size_hint: .08, .7
    pos_hint: {'center_x': .05, 'center_y': .5}

  MenuButton:
    canvas.before:
      Color:
        rgba: 1, 1, 0, 0.5
      Rectangle:
        source: 'bin.png'
        pos: self.pos
        size: 100, 100
    size_hint: None, None
    pos_hint: {'center_x': .95, 'center_y': .92}


